			"args": [
				"Config=config.json",
				"xGraph=${workspaceRoot}/../xGraph",
				"xCraft2=${workspaceRoot}/../xCraft2",
				"Scrapyard=${workspaceRoot}/"
			],
			"env": {
				"NODE_PATH": "node_modules"
			}
		}
	]
